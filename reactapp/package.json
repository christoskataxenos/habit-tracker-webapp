{
  "name": "pulse-tracker",
  "private": true,
  "version": "1.6.0",
  "description": "Keep your rhythm alive. A high-performance habit tracker for the disciplined.",
  "author": "Christos Kataxenos <chris@example.com>",
  "maintainer": "Christos Kataxenos <chris@example.com>",
  "homepage": "https://github.com/christoskataxenos/Study-Tracker",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "concurrently -k \"npm run dev\" \"wait-on tcp:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder --win --x64",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:linux:arm64": "npm run build && electron-builder --linux --arm64",
    "electron:build:win:arm64": "npm run build && electron-builder --win --arm64",
    "android:sync": "npm run build && npx cap copy && npx cap sync android",
    "android:open": "npx cap open android"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.1",
    "@capacitor/cli": "^8.0.1",
    "@capacitor/core": "^8.0.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/utilities": "^3.2.2",
    "canvas-confetti": "^1.9.4",
    "clsx": "^2.1.1",
    "framer-motion": "^12.27.5",
    "lucide-react": "^0.562.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.17",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.pulse.tracker",
    "productName": "PULSE",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "../builds/${os}"
    },
    "nsis": {
      "artifactName": "${productName} Setup ${version} ${arch}.${ext}",
      "license": "../TERMS.txt"
    },
    "portable": {
      "artifactName": "${productName} Portable ${version} ${arch}.${ext}"
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "deb",
        "rpm"
      ],
      "category": "Education"
    }
  }
}